<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!--
mrp.production inherit
-->

        <record id="mrp_byworcenter_production_form" model="ir.ui.view">
            <field name="name">mrp.byworcenter.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='workcenter_lines']" position="before">
                    <separator string="Work Orders Lots"/>
                    <field name="wo_lot_ids">
                        <tree>
                            <field name="number"/>
                            <field name="name"/>
                            <field name="wo_ids"/>
                            <field name="percentage"/>
                            <field name="state"/>
                        </tree>
                    </field>
                    <separator string="Work Orders"/>
                </xpath>

                <xpath expr="//field[@name='workcenter_lines']/tree" position="inside">
                    <field name="wo_lot_id"/>
                </xpath>

            </field>
        </record>

<!--
mrp.workcenter.product.capacity
-->

        <record id="mrp_workcenter_product_capacity_tree" model="ir.ui.view">
            <field name="name">mrp.workcenter.product.capacity.tree</field>
            <field name="model">mrp.workcenter.product.capacity</field>
            <field name="arch" type="xml">
                <tree string="Workcenter Product Capacities" version="7.0">
                    <field name="workcenter_id"/> 
                    <field name="product_id"/>
                    <field name="qty"/>
                    <field name="uom_id"/>
                </tree>
            </field>
        </record>

        <record id="mrp_workcenter_product_capacity_search" model="ir.ui.view">
            <field name="name">mrp.workcenter.product.capacity.search</field>
            <field name="model">mrp.workcenter.product.capacity</field>
            <field name="arch" type="xml">
                <search string="Workcenter Product Capacities">
                    <field name="workcenter_id"/> 
                    <field name="product_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Work Center" icon="terp-blue-folder" name="group_report" context="{'group_by':'workcenter_id'}"/>
                        <filter string="Product" icon="terp-blue-folder" name="group_report" context="{'group_by':'product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="mrp_workcenter_product_capacity_action" model="ir.actions.act_window">
            <field name="name">Product Capacity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.workcenter.product.capacity</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="mrp_workcenter_product_capacity_tree"/>
            <field name="search_view_id" ref="mrp_workcenter_product_capacity_search"/>
        </record>

        <menuitem
            id="menu_mrp_workcenter_capacity"
            parent="mrp.menu_mrp_configuration"
            name="Product Capacity"
            sequence="40"
            action="mrp_workcenter_product_capacity_action"
        />

<!--
mrp.workcenter inherit 
-->

        <record id="mrp_byworcenter_workcenter_form" model="ir.ui.view">
            <field name="name">mrp.byworcenter.workcenter.form</field>
            <field name="model">mrp.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@string='General Information']/group" position="after">
                    <group name="workcenter_products" string="Products Information">
                        <field name="product_capacity_ids" colspan="4">
                            <tree string="Workcenter Product Capacities" editable="bottom" version="7.0">
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="uom_id"/>
                            </tree>
                        </field>
                    </group>
                </xpath>

            </field>
        </record>

<!--
mrp.routing.workcenter inherits
-->

        <record id="mrp_routing_workcenter_tree_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.tree</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_tree_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='workcenter_id']" position="after">
                    <field name="product_ids"/>
                </xpath>

            </field>
        </record>

        <record id="mrp_routing_workcenter_form_view" model="ir.ui.view">
            <field name="name">mrp.routing.workcenter.form</field>
            <field name="model">mrp.routing.workcenter</field>
            <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//group" position="after">
                    <group string="Products Needed">
                        <field name="product_ids" nolabel="1">
                            <tree string="Operation Product Quantities" editable="bottom" version="7.0">
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="uom_id"/>
                            </tree>
                        </field>
                    </group>
                </xpath>

            </field>
        </record>


<!--
mrp.production.workcenter.line
-->

        <record id="mrp_workoder_by_lot_kanban_view" model="ir.ui.view">
            <field name="name">Work Order</field>
            <field name="model">mrp.production.workcenter.line</field>
            <field name="arch" type="xml">
                <kanban version="7.0" default_group_by="stage_id">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="wo_lot_id"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(FFFFFF)} oe_kanban_card oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_content">
                                <b>WO:</b> <field name="name"/><br/>
                                <b>MO:</b> <field name="production_id"/><br/>
                                <b>LOT:</b> <field name="wo_lot_id"/><br/>
                                <b>Product:</b> <field name="product"/><br/>
                                <b>Hour:</b> <field name="hour"/><br/>
                                <b>Delay:</b> <field name="delay"/><br/>
                            </div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="mrp_workoder_active_kanban_action" model="ir.actions.act_window">
            <field name="name">Active Work Orders</field>
            <field name="res_model">mrp.production.workcenter.line</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="mrp_workoder_by_lot_kanban_view"/>
            <field name="context">{'search_default_actived': 1}</field>
        </record>

         <record model="ir.ui.view" id="wo_lot_search_view">
             <field name="name">mrp.production.workcenter.line.routing</field>
             <field name="model">mrp.production.workcenter.line</field>
             <field name="inherit_id" ref="mrp_operations.view_mrp_production_workcenter_form_view_filter"/>
             <field name="arch" type="xml">
                 <data>
                     <xpath expr="//field[@name='state']" position="after">
                        <field name="wo_lot_id"/>
                        <filter name="actived" string="Actived" domain="[('active_lot','=',True)]"/>
                    </xpath>
                 </data>
             </field>
         </record>

        <record id="mrp_workoder_by_lot_kanban_action" model="ir.actions.act_window">
            <field name="name">Work Orders</field>
            <field name="res_model">mrp.production.workcenter.line</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="mrp_workoder_by_lot_kanban_view"/>
            <field name="context">{'search_default_wo_lot_id': [context.get('active_id', False)], 'default_wo_lot_id': context.get('active_id', False), 'active_test': False}</field>
            <field name="search_view_id" ref="wo_lot_search_view"/>
         </record>

        <menuitem
            action="mrp_workoder_active_kanban_action"
            id="menu_mrp_workorder_active"
            parent="mrp.menu_mrp_planning"
            sequence="3"/>

<!--
mrp.workorder.lot
-->

        <record id="mrp_workorder_lot_tree" model="ir.ui.view">
            <field name="name">mrp.workorder.lot.tree</field>
            <field name="model">mrp.workorder.lot</field>
            <field name="arch" type="xml">
                <tree string="Work Order Lots" version="7.0">
                    <field name="number"/>
                    <field name="name"/>
                    <field name="production_id"/>
                    <field name="percentage"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="mrp_workorder_lot_form" model="ir.ui.view">
            <field name="name">mrp.workorder.lot.form</field>
            <field name="model">mrp.workorder.lot</field>
            <field name="arch" type="xml">
                <form string="Work Order Lot" version="7.0">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" string="Lot Name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group colspan="4" col="4">
                                <field name="number"/>
                                <field name="production_id"/>
                                <field name="percentage"/>
                            </group>
                            <group>
                                <separator string="Work Orders" colpan="4"/>
                                <field name="wo_ids" colspan="4" nolabel="1">
                                    <tree>
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="workcenter_id"/>
                                        <field name="cycle"/>
                                        <field name="hour"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mrp_workorder_lot_kanban_view" model="ir.ui.view">
            <field name="name">Work Order Lot</field>
            <field name="model">mrp.workorder.lot</field>
            <field name="arch" type="xml">
                <kanban version="7.0" class="oe_background_grey" create="false">
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(FFFFFF)} oe_kanban_card oe_kanban_global_click">
                            <div t-attf-class="oe_kanban_content">
                                <b>WO LOT:</b> <field name="name"/><br/>
                                <div>
                                    <a name="%(mrp_workoder_by_lot_kanban_action)d" type="action" style="margin-right: 10px">
                                    Work Orders
                                    </a>
                                    <button name="%(mrp_consume_produce.create_consume_action)d" string="Consume" icon="gtk-ok" type="action" groups="stock.group_stock_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="mrp_workorder_lot_kanban_action" model="ir.actions.act_window">
             <field name="name">Work Orders by Active Lot</field>
             <field name="res_model">mrp.workorder.lot</field>
             <field name="view_mode">kanban</field>
             <field name="domain">[('state', '=', 'open')]</field>
             <field name="view_id" ref="mrp_workorder_lot_kanban_view"/>
             <field name="help" type="html">
                <p>
                    <strong> There's not Work Order Lots Active </strong><br/>
                </p>
                <p>
                    Create Work Order Lots by Confirming a Manufacturing Order.
                    To Active a Work Order Lot make consumes in the
                    Manufacturing Order.
                </p>
             </field>
         </record>

        <menuitem
            action="mrp_workorder_lot_kanban_action"
            id="menu_mrp_workorder_active_lot"
            parent="mrp.menu_mrp_planning"
            groups="stock.group_stock_user"
            sequence="4"/>

    </data>
</openerp>
