<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>

        <record id="view_account_tax_voucher" model="ir.ui.view">
                <field name="name">view.account.tax.voucher</field>
                <field name="model">account.tax</field>
                <field name="inherit_id" ref="account.view_tax_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='active']" position="after">
                        <field name="tax_voucher_ok"/>
                    </xpath>
                </field>
        </record>


        <record id="view_account_tax_voucher_account" model="ir.ui.view">
                <field name="name">view.account.tax.voucher.account</field>
                <field name="model">account.tax</field>
                <field name="inherit_id" ref="account.view_tax_form"/>
                <field name="arch" type="xml">
                    <group string="Tax Computation" position="before">
                        <field name="account_collected_voucher_id" attrs="{'required':[('tax_voucher_ok','=',True)]}"/>
                        <newline/>
                        <field name="account_paid_voucher_id" attrs="{'required':[('tax_voucher_ok','=',True)]}"/>
                        <field name="account_expense_voucher_id" attrs="{'required':[('tax_voucher_ok','=',True)]}"/>
                        <field name="account_income_voucher_id" attrs="{'required':[('tax_voucher_ok','=',True)]}"/>
                    </group>
                </field>
        </record>
        
        <record id="view_account_voucher_validate_tax" model="ir.ui.view">
                <field name="name">view.account.voucher.validate.tax</field>
                <field name="model">account.voucher</field>
                <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//button[@name='proforma_voucher']" position="after">
                        <button name="validate_paid_tax" string="Validate Tax" type="object" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'wait_tax'), ('double_validation_ok', '=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='journal_id']" position="after">
                        <field name="date_tax_move" on_change="onchange_period_tax(date_tax_move)" attrs="{'readonly': [('move_tax_id', '!=', False)], 'invisible': [('double_validation_ok', '=', False)]}"/>
                        <field name="period_tax_move" attrs="{'invisible': [('double_validation_ok', '=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='company_id']" position="after">
                        <field name="move_tax_id" attrs="{'invisible': [('double_validation_ok', '=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='company_id']" position="after">
                        <field name="move_id" invisible="1"/>
                    </xpath>
                    <xpath expr="//field[@name='period_tax_move']" position="after">
                        <field name="double_validation_ok" invisible="1"/>
                    </xpath>
                </field>
        </record>
    </data>
</openerp>
