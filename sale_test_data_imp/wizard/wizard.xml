<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_wizard_sale_test_data">
            <field name="name">wizard.sale.test.data</field>
            <field name="model">test.yaml.data</field>
            <field name="arch" type="xml">
                <form string="Run test yaml" version="7.0">
                    <footer>
                        <button name="test_sale" type="object" string="Apply" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
        
         <record id="view_wizard_sale_test_data_result" model="ir.ui.view">
            <field name="name">view.wizard.sale.test.data.result</field>
            <field name="model">test.yaml.data</field>
            <field name="arch" type="xml">
                <form string="Result Test" version="7.0">
                    <p> Files test user: <field name="yaml_file" readonly="1" filename="filename"/></p>
                    <p> FIle log : <field name="yaml_file_log" readonly="1" filename="filename_log" /></p>
                    <newline/>
                    <footer>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_sale_test_data" model="ir.actions.act_window">
            <field name="name">Run test yaml</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">test.yaml.data</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wizard_sale_test_data"/>
            <field name="target">new</field>
        </record>
        
        <menuitem name="Test yaml" id="menu_action_test" />
        <menuitem  id="menu_action_sale_test_data" name='Test' parent='menu_action_test' />
        <menuitem action="action_wizard_sale_test_data" id="menu_action_sale_test_data_wizard" parent='menu_action_sale_test_data' />
    </data>
</openerp>
