<?xml version="1.0"?>
<openerp>
  <data>
    <record model="ir.ui.view" id="res_company_form_purchase_report">
      <field name="name">res.company.form.purchase.report</field>
      <field name="model">res.company</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="report_multicompany.view_company_form_report_multi"/>
      <field name="arch" type="xml">
        <xpath expr="/form/notebook/page[@string='Reports']" position="inside">
          <field name="purchase_request_id"/> 
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="purchase_request_view_report_multi">
       <field name="name">purchase.order.request.form.multicompany</field>
      <field name="model">purchase.order</field>
      <field name="type">form</field>
      <field name="inherit_id" ref="purchase_report.purchase_order_view_report_multi"/>
      <field name="arch" type="xml">
         <xpath expr="//field[@name='state']" position="after">
            <button name="%(purchase_request.purchase_multicompany_request)d" string="Print Purchase Request" states="draft" type="action" icon="gtk-print" groups="l10n_ve_fiscal_requirements.group_fiscal_ve"/>
         </xpath>
      </field>
    </record> 

  </data>
</openerp>
