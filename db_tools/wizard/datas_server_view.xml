<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_data_server_wizard_form">
            <field name="name">view.data.server.wizard.form</field>
            <field name="model">data.server</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Data Server">
                    <field name="server" colspan="4"/>
                    <field name="port" colspan="4"/>
                    <field name="protocol_conection" colspan="4"/>
                    <button string="Cancel" special="cancel" icon="gtk-cancel" colspan="2"/>
                    <button name="confirm_data" string="Confirm" type="object" icon="terp-gtk-go-back-ltr" colspan="2"/>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_data_server_wizard">
            <field name="name">Data server</field>
            <field name="res_model">data.server</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>
