<?xml version="1.0" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="crossovered_budget_view_form">
            <field name="name">crossovered.budget.form.inherit</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id"
                   ref="account_budget.crossovered_budget_view_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='validating_user_id']"
                           position="after">
                        <field name="dt_approved" readonly="True"/>
                        <field name="dt_validated" readonly="True"/>
                        <field name="dt_done" readonly="True"/>
                    </xpath>
                    <xpath 
                        expr="//field[@name='crossovered_budget_line']//tree/field[@name='planned_amount']"
                    position="after">
                        <field name="practical_amount_aa"/>
                    <field name="forecasted_amount"/>
                    </xpath>
                    <xpath 
                        expr="//field[@name='crossovered_budget_line']//form//field[@name='planned_amount']"
                    position="after">
                        <field name="practical_amount_aa"/>
                        <field name="forecasted_amount"/>
                    </xpath>
            </field>
        </record>
    </data>
</openerp>

