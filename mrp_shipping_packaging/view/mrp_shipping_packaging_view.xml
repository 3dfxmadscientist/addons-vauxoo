<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_tracking_form_inherit">
            <field name="name">stock.tracking.form</field>                                 
            <field name="model">stock.tracking</field>                                              
            <field name="inherit_id" ref="stock.view_tracking_form"/>                           
            <field name="arch" type="xml">
                <xpath expr="//group" position="before">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,packing,confirm" statusbar_colors='{"shipping_except":"red","invoice_except":"red","waiting_date":"blue"}'/>
                    </header>
                </xpath>
                
                <xpath expr="//field[@name='name']" position="after">
                    <field name="partner_id" string="Customer" domain="[('customer','=',True)]" 
                        modifiers="{'readonly': [['state', 'in', ['packing', 'done']]]}" required="1"/>
                    <field name="ean"/>
                </xpath>

            </field>
        </record>
        
        <record model="ir.ui.view" id="view_picking_out_form_inherit">
            <field name="name">stock.picking.out.form</field>                                 
            <field name="model">stock.picking.out</field>                                              
            <field name="inherit_id" ref="stock.view_picking_out_form"/>                           
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="stock_tracking_id" domain="[('partner_id', '=', partner_id)]"/>
                </xpath>

            </field>
        </record>


    </data>
</openerp>
