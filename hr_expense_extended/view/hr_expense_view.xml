<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_expense_extended_expense_form" model="ir.ui.view">
            <field name="name">hr.expense.extended.expense.form</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='line_ids']" position="after">
                    <separator string = "Deductible Expenses"/>
                    <field name="ail_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="invoice_id"/>
                            <field name="invoice_line_tax_id"/>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal" sum=""/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//button[@name='confirm']" position="after">
                    <button name="reconcile_viatical_payment" type="object" string="Reconcile Payment" states="done"/>
                </xpath>

                <xpath expr="//sheet/group" position="before">
                    <div class="oe_right oe_button_box" name="button_box">
                        <button string="Add Invoice" name="%(action_add_invoice_to_expense)d" type="action"/>
                    </div>
                </xpath>

                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Payments"  attrs="{'invisible':[('state','!=','done')]}">
                        <group>
                            <group>
                                <button string="Refresh" name="load_payments" type="object" class="oe_highlight"/>
                                <field name="skip"/>
                                <field name="payment_ids" nolabel="1" colspan="2" attrs="{'required':[('skip','=',False),('state','=','done')], 'readonly':['|',('skip','=',True),('state','!=','done')]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
