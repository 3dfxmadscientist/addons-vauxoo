<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_expense_extended_expense_form" model="ir.ui.view">
            <field name="name">hr.expense.extended.expense.form</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='line_ids']" position="after">
                    <separator string="Deductible Lines"/>
                    <field name="ail_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="invoice_id"/>
                            <field name="invoice_line_tax_id"/>
                            <field name="quantity"/>
                            <field name="price_unit"/>
                            <field name="price_subtotal" sum=""/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//field[@name='line_ids']" position="before">
                    <separator string="No Deductible Lines"/>
                </xpath>

                <xpath expr="//button[@name='confirm']" position="after">
                    <button name="reconcile_payment" type="object" string="Reconcile Payment" states="done"/>
                </xpath>

                <xpath expr="//field[@name='name']" position="replace">
                </xpath>

                <xpath expr="//sheet/group" position="before">
                    <div class="oe_right oe_button_box" name="button_box">
                        <button string="Add Invoice" name="%(action_add_invoice_to_expense)d" type="action"/>
                    </div>
                    <h1>
                        <field name="id" readonly="1" string="Expense ID"/>
                        <field name="name"/>
                    </h1>
                </xpath>

                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Advances"  attrs="{'invisible':[('state','not in',['done','paid'])]}">
                        <group>
                            <group>
                                <group>
                                    <field name="skip" attrs="{'readonly':[('state','!=','done')]}"/>
                                    <button string="Refresh" name="load_payments" type="object" class="oe_highlight" attrs="{'invisible':[('state','!=','done')]}"/>
                                </group>
                                <field name="advance_ids" nolabel="1" colspan="2" attrs="{'readonly':[('state','!=','done')]}">
                                    <tree>
                                        <field name="journal_id"/>
                                        <field name="period_id"/>
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="ref"/>
                                        <field name="partner_id"/>
                                        <field name="debit"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//page[@string='Accounting']" position="after">
                    <page string="Invoices" >
                        <group>
                            <field name="invoice_ids" widget="many2many" nolabel="1" domain="[('type','=','in_invoice')]" context="[('type','=','in_invoice')]" readonly="1"/>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
