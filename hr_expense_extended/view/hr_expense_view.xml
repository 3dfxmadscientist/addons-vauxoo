<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_expense_extended_form" model="ir.ui.view">
            <field name="name">hr.expense.extended.from</field>
            <field name="model">hr.expense.expense</field>
            <field name="inherit_id" ref="hr_expense.view_expenses_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/tree/field[@name='ref']" position="after">
                    <field name="invoice_id"/>
                </xpath>
            </field>
        </record>

        <record id="hr_expense_extended_limited_invoice_form" model="ir.ui.view">
            <field name="name">hr.expense.extended.limited.invoice.from</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <label string="VERSION MODIFICADA"/>
                </xpath>
<!--
                <xpath expr="//header" position="attribute">
                </xpath>
-->
            </field>
        </record>

        <record id="action_hr_expense_extended_limited_invoice_form" model="ir.actions.act_window">
            <field name="name">Draft Invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="hr_expense_extended_limited_invoice_form"/>
        </record>

    </data>
</openerp>
