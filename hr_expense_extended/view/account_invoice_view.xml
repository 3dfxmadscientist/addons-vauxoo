<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_expense_extended_invoice_form" model="ir.ui.view">
            <field name="name">hr.expense.extended.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@string='Validate']" position="after">
                    <button colspan="2" name="create_expense_from_invoice" string="Create Expense From Invoice" type="object" attrs="{'invisible': [('state','!=', 'draft')], 'readonly': [('expense_id','!=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="expense_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="action_add_invoice_to_expense" model="ir.actions.act_window">
            <field name="name">Expense Invoice</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type','=','in_invoice'),('expense_id','=',context.get('active_id',False))]</field>
            <field name="context">{'default_type': 'in_invoice', 'type': 'in_invoice', 'default_expense_id': context.get('active_id',False), 'expense_id': context.get('active_id',False) }</field>
            <field name="target">current</field>
        </record>

    </data>
</openerp>
