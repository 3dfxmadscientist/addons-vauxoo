<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="procurement_order_merge_jit_extended_form" model="ir.ui.view">
            <field name="name">procurement.order.merge.jit.extended.form</field>
            <field name="model">procurement.order.merge.jit.extended</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Procurement Merge">
                    <separator string="Are you sure you want to merge the procurements of these production orders?" colspan="4"/>
                    <newline/>
                    <label string="
Please note that: &#10; &#10;
Orders will only be merged if: &#10;
    * Procurments Orders are in draft &#10;
    * Procurments Orders have same location &#10;
    * Procurments Orders have same procurement method &#10;
    * Procurments Orders have same product"
                        colspan="4"/>
                    <newline/>
                    <separator string="" colspan="4" />

                    <button string="Cancel" icon="gtk-cancel" type="object" special="cancel"/>
                    <button string="Merge Procurement" icon="gtk-ok" name="procurement_merge_jit" type="object"/>
                </form>
            </field>
        </record>

    <act_window id="procurement_merge_wizard_jit_extended"
        name="Procurements Merge"
        src_model="mrp.production"
        res_model="procurement.order.merge.jit.extended"
        view_mode="form"
        target="new"
        key2="client_action_multi"
        />

       <record id="create_procurement_merge_jit_extended_action" model="ir.actions.act_window">
            <field name="name">Procurement Merge</field>
            <field name="res_model">procurement.order.merge.jit.extended</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>