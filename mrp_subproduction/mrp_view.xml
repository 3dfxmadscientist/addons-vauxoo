<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
<!--
	modifiying view
-->
        <record id="mrp_subproduction_form" model="ir.ui.view">
            <field name="name">mrp.subproduction.form</field>
            <field name="model">mrp.production</field>
	    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
		<xpath expr="/form/notebook/page[@string='Extra Information']" position="after">
		    <page string="Subproductions">
			<field name="parent_id"/>
			<separator string="Subproductions" colspan="4"/>
                        <field name="subproduction_ids" nolabel="1" widget="one2many_list" mode="tree,form" height="275" colspan="2" context="{'product_id': 4}"/>
			<newline/>
			<field name="product_subproduction_qty_real"/>
			<field name="product_subproduction_qty_planned"/>
                    </page>
		</xpath>
            </field>
        </record>

    </data>
</openerp>