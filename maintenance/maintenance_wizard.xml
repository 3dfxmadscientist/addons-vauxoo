<?xml version="1.0"?>
<openerp>
    <data>
        <menuitem icon="terp-sale" id="menu_maintenance_root" name="Maintenance"
            web_icon="images/knowledge.png"
            web_icon_hover="images/knowledge-hover.png"/>/>
        <menuitem id="menu_maintenance_update" name="Update Maintenances" parent="menu_maintenance_root"/>

        <menuitem action="action_wizard_update_maintenance" id="menu_wizard_check_maintenance" parent="menu_maintenance_update"/>
    
        <record id="view_wizard_update_maintenance" model="ir.ui.view">
            <field name="name">view.wizard.update.maintenance</field>
            <field name="model">wizard.check.maintenance</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Update Maintenances">
                <separator string="This wizard search the products that need an maintenance, and create the maintenance."/>
                <newline/>
                <separator string="Click on Update below to start the process..."/>
                <separator colspan="4"/>
                <group colspan="4">
                    <button name="update_maintenances" string="Update" type="object" icon="gtk-apply"/>
                    <button special="cancel" string="Cancel" icon="gtk-stop"/>
                </group>
            </form>
            </field>
        </record>
        <record id="action_wizard_update_maintenance" model="ir.actions.act_window">
            <field name="name">Update Maintenance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.check.maintenance</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_wizard_start_maintenance" model="ir.ui.view">
            <field name="name">view.wizard.start.maintenance</field>
            <field name="model">wizard.maintenance.start</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Start Maintenances">
                <separator string="Indicate the date of completition of maintenance"/>
                <newline/>
                <separator colspan="4"/>
                <group>
                    <field name="date"/> 
                </group>
                <group colspan="4">
                    <button name="start_maintenance" string="Start" type="object" icon="gtk-apply"/>
                    <button special="cancel" string="Cancel" icon="gtk-stop"/>
                </group>
            </form>
            </field>
        </record>
        <record id="action_wizard_start_maintenance" model="ir.actions.act_window">
            <field name="name">Start Maintenance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.maintenance.start</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_wizard_cancel_maintenance" model="ir.ui.view">
            <field name="name">view.wizard.cancel.maintenance</field>
            <field name="model">wizard.maintenance.cancel</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
            <form string="Cancel Maintenance">
                <separator colspan="4" string="If you want reassign the maintenance, you must be indicate the date of compromise"/>
                <group>
                    <field name="date"/> 
                </group>
                <separator colspan="4"/>
                <group colspan="3">
                    <button name="reassign_maintenance" string="Reassign" type="object" icon="gtk-apply"/>
                    <button name="cancel_maintenance" string="Cancel Maintenance" type="object" icon="gtk-stop"/>
                    <button special="cancel" string="Close" icon="gtk-stop"/>
                </group>
            </form>
            </field>
        </record>
        <record id="action_wizard_cancel_maintenance" model="ir.actions.act_window">
            <field name="name">Cancel Maintenance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.maintenance.cancel</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</openerp>
