<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>

        <record id="view_move_form_iva" model="ir.ui.view">
            <field name="name">account.move.form.iva</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_id']/form/group/field[@name='ref']" position="after">
                    <field name="ref2"/>
                </xpath>
                <xpath expr="//field[@name='line_id']/tree/field[@name='name']" position="after">
                    <field name="ref2"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_move_line_form_ref2" model="ir.ui.view">
            <field name="name">account.move.line.form.ref2</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name=&quot;period_id&quot;]" position="after">
                    <field name="ref2"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_move_line_tree_ref2" model="ir.ui.view">
            <field name="name">account.move.line.tree.ref2</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name=&quot;period_id&quot;]" position="before">
                    <field name="ref2"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_move_line_tree_ref3" model="ir.ui.view">
            <field name="name">account.move.line.tree.ref3</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name=&quot;ref&quot;]" position="before">
                    <field name="ref2"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>
