<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="account_reconcile_advance_supplier_form">
            <field name="name">account.reconcile.advance.supplier.form</field>
            <field name="model">account.reconcile.advance</field>
            <field name="arch" type="xml">
                <form string='Account Reconcile Advance' version='7.0'>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,done" statusbar_colors='{"draft":"blue","approved":"blue"}'/>
                </header>
                <div class="oe_title">
                    <div class="oe_edit_only">
                        <label for="name"/>
                    </div>
                    <h1>
                        <field name="name" default_focus="1" placeholder="Name" />
                    </h1>
                </div>
                <group col='4'>
                    <field name='date'/>
                    <field name='date_post'/>
                    <field name='partner_id' required='1'/>
                    <field name='period_id'/>
                    <field name='journal_id'/>
                </group>
                <notebook>
                    <page string='Invoices'>
                        <field 
                            name='invoice_ids' 
                            domain="[('type','=','in_invoice'),('state','=','open'),('partner_id','=',partner_id)]"
                            nolabel='1'/>
                        <field name='ai_aml_ids' nolabel='1'/>
                    </page>
                    <page string='Advances'>
                        <field 
                            name='voucher_ids' 
                            domain="[('type','=','payment'),('state','=','posted'),('partner_id','=',partner_id)]"
                            nolabel='1'/>
                        <field name='av_aml_ids' nolabel='1'/>
                    </page>
                </notebook>
                </form>
            </field>
        </record>
    </data>
</openerp>
